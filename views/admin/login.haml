#content
  .row
    %h2
      Login

    %form{ action: "/login", method: "post" }
      %div
        %label{ for: "username" }
          Username:
        %input{ type: "text", name: "username" }
      %div
        %label{ for: "password" }
          Password: 
        %input{ type: "password", name: "password" }
      %div
        %input.btn{ type: "submit", value: "Login" }