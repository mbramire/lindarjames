#content
  .row
    %h2
      Login

    %form{ action: "/login", method: "post" }
      %div
        %label{ for: "username" }
          username:
        %input{ type: "text", name: "username" }
      %div
        %label{ for: "password" }
          password: 
        %input{ type: "password", name: "password" }
      %div.margin-top
        %input.btn{ type: "submit", value: "Login" }